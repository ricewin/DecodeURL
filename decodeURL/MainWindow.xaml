<Window x:Class="decodeURL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:decodeURL"
        mc:Ignorable="d"
        Title="decode URL"
        Height="360"
        Width="640"
        ScrollViewer.VerticalScrollBarVisibility="Disabled"
        ResizeMode="CanResizeWithGrip"
        Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Label x:Name="appName"
                   Content="decode URL"
                   FontSize="24"
                   FontWeight="Black"
                   FontFamily="Broadway"
                   Width="600"
                   TabIndex="1" />
            <Label x:Name="detail"
                   Content="URLエンコードされたリンクを日本語にデコードします★"
                   Width="600"
                   TabIndex="2" />
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <TextBox x:Name="inputBox"
                     TextWrapping="Wrap"
                     Text="input here URL."
                     Width="486"
                     Margin="10"
                     TabIndex="3"
                     AutomationProperties.Name="input">
            </TextBox>
            <Button x:Name="convert"
                    Content="変換"
                    HorizontalAlignment="Right"
                    Margin="10"
                    Width="80"
                    Click="doConvert"
                    TabIndex="4"
                    IsDefault="True" />
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <TextBox x:Name="outputBox"
                       TextWrapping="Wrap"
                       Width="486"
                       Margin="10"
                       Padding="5"
                     AutomationProperties.Name="output"
                     TabIndex="5"
                     IsTabStop="False" />
            <Button x:Name="copy"
                    Content="コピー"
                    Margin="10"
                    Width="80"
                    TabIndex="6"
                    Click="doCopy" />
        </StackPanel>
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <TextBlock x:Name="messageBox"
                       TextWrapping="Wrap"
                       Width="250"
                       FontSize="16"
                       VerticalAlignment="Center" />
            <Button x:Name="sample"
                    Content="サンプル"
                    Margin="15,10"
                    Padding="20,10"
                    TabIndex="7"
                    Click="inputSample"
                    IsTabStop="False" />
            <Button x:Name="clear"
                    Content="クリア(_C)"
                    Margin="15,10"
                    Padding="20,10"
                    TabIndex="9"
                    Click="doClear" />
            <Button x:Name="close"
                    Content="閉じる(_X)"
                    Margin="15,10"
                    Padding="20,10"
                    TabIndex="8"
                    Click="doExit" />
        </StackPanel>

    </Grid>
</Window>
